{
  "name": "Facebook Link Share",
  "version": "1.0.1",
  "description": "This extension allows you to share Links on Facebook with custom title, description and thumbnail image.",
  "background": { "scripts": ["jquery.js", "background.js"] },
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "name": "Facebook Link Share",
  	"default_title": "Facebook Link Share",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ],
  "manifest_version": 2
}